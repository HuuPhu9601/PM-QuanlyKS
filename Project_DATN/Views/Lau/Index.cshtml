@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Project_DATN.Services.Models.LauRequest>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main>
    <div class="container-fluid">
        <h1 class="mt-4">Danh Sách Tầng</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
            <li class="breadcrumb-item active">Danh Sách</li>
        </ol>
        <div class="card-header">
            <form asp-action="CreateLau" asp-controller="Lau" method="get">
                <input class="btn btn-primary" type="submit" value="Thêm" />
            </form>
        </div>
        
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table mr-1"></i>
                Danh sách Tầng
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Tên lầu</th>
                                <th>Số lượng phòng</th>
                                <th>Cơ sở</th>
                                <th>Ghi chú</th>

                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Tên lầu</th>
                                <th>Số lượng phòng</th>
                                <th>Cơ sở</th>
                                <th>Ghi chú</th>
                                <th>Trạng thái</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.tenLau</td>
                                    <td>@item.SoLuongPhong</td>
                                    <td>@item.tencoso</td>
                                    <td>@item.ghiChu</td>
                                    <td>@item.trangThai</td>
                                    <td>
                                        <form asp-action="UpdateLau" asp-controller="Lau" asp-route-id="@item.Id" method="get">
                                            <input type="submit" class="btn btn-success" value="Sửa" />
                                        </form>
                                        <form asp-action="DeleteLau" asp-controller="Lau" asp-route-id="@item.Id" method="get">
                                            <input type="submit" class="btn btn-danger" value="Xóa" />
                                        </form>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>
<footer class="py-4 bg-light mt-auto">
    <div class="container-fluid">
        <div class="d-flex align-items-center justify-content-between small">
            <div class="text-muted">Copyright &copy; Your Website 2020</div>
            <div>
                <a href="#">Privacy Policy</a>
                &middot;
                <a href="#">Terms &amp; Conditions</a>
            </div>
        </div>
    </div>
</footer>

