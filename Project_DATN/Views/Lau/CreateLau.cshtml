@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model Project_DATN.Services.Models.LauRequest
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card shadow-lg border-0 rounded-lg mt-5">
    <div class="card-header"><h3 class="text-center font-weight-light my-4">Tầng</h3></div>
    <div class="card-body">
        <form asp-action="CreateLau" asp-controller="Lau" method="post">
            <div class="form-group">
                <label class="small mb-1" for="inputEmailAddress">Tên tầng</label>
                <input asp-for="tenLau" class="form-control py-4" id="inputEmailAddress" type="text" />
                <span asp-validation-for="tenLau" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="small mb-1" for="inputPassword">Số lượng phòng</label>
                <input asp-for="SoLuongPhong" class="form-control py-4" id="inputPassword" type="text" />
                <span asp-validation-for="SoLuongPhong" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="small mb-1" for="inputPassword">Ghi chú</label>
                <input asp-for="ghiChu" class="form-control py-4" id="inputPassword" type="text" />
                <span asp-validation-for="ghiChu" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="small mb-1" for="inputPassword">Trạng thái</label>
                <input asp-for="trangThai" class="form-control" />
                <span asp-validation-for="trangThai" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="small mb-1" for="inputPassword">Cơ sở</label>
                <select asp-for="ID_CoSo" class="custom-select" asp-items="ViewBag.lstCoso"></select>
                <span asp-validation-for="ID_CoSo" class="text-danger"></span>
            </div>

            <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                <input class="btn btn-primary" type="submit" value="Tạo Mới" />
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

