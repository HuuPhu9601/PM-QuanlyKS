@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model Project_DATN.Services.Models.LoaiPhongRequest
@{ ViewData["Title"] = "CreateQRcode";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#fields1').summernote({
                height: 550
            });
        });
    </script>
}

<h1>Tạo QRcode</h1>
<form asp-action="CreateQRcode" asp-controller="LoaiPhong" enctype="multipart/form-data" method="post">
    <textarea asp-for="fields1"></textarea>
    <input type="submit" class="btn btn-primary" value="Tạo QRcode" />
    <input asp-for="Id" type="hidden" />
</form>

@if (ViewBag.QRCode != null)
{
<img src="@ViewBag.QRCode" style="width:300px;height:300px" />
}


