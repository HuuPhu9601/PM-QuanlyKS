@model Project_DATN.Data.EF.Entities.HoaDon

@{
    ViewData["Title"] = "ChuyenPhong";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chuyển Phòng</h1>
<hr />
<h4>Danh Sách Phòng Trống</h4>
<div class="row">
    <div class="col-md-4">
        <form asp- asp-action="ChuyenPhong">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="ID_Phong" />
            <div>
                @foreach (var item in ViewBag.Tang)
                {
                    <table>
                        <thead>
                            <tr>
                                <th>
                                    @item.tenLau
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @foreach (var itemP in ViewBag.ListPhong)
                                    {
                                        if (item.tenLau == itemP.Lau.tenLau)
                                        {
                                            <div class="btn-group dropend">
                                                <button class="btn btn-success dropright" data-bs-toggle="dropdown" aria-expanded="false">
                                                    @itemP.tenPhong
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <button type="submit" asp-route-idPhong="@itemP.ID" asp-action="ChuyenPhong" asp-controller="BookingRoom" class="dropdown-item btn btn-primary fas fa-plus ">Chuyển Phòng</button>
                                                    </li>

                                                </ul>
                                            </div>
                                        }
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                }
            </div>
            @*<div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>*@
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

