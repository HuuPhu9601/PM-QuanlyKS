@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Project_DATN.Services.Models.PhongRequest>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main>
    <div class="container-fluid">
        <h1 class="mt-4">Danh Sách Phòng</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
            <li class="breadcrumb-item active">Danh Sách</li>
        </ol>
        <div class="card-header">
            <form asp-action="CreatePhong" asp-controller="Phong" method="get">
                <input class="btn btn-primary" type="submit" value="Thêm" />
            </form>
        </div>
        
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table mr-1"></i>
                Danh sách Phòng
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Tên phòng</th>
                                <th>Tầng</th>
                                <th>Cơ sở</th>
                                <th>Loại phòng</th>
                                <th>Ghi chú</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Tên phòng</th>
                                <th>Tầng</th>
                                <th>Cơ sở</th>
                                <th>Loại phòng</th>
                                <th>Ghi chú</th>
                                <th>Trạng thái</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.tenPhong</td>
                                    <td>@item.Lau.tenLau</td>
                                    <td>@item.CoSo.tenCoSo</td>
                                    <td>@item.LoaiPhong.tenLoaiPhong</td>
                                    <td>@item.ghiChu</td>
                                    <td>
                                        @item.trangThai
                                </td>
                                <td>
                                    <form asp-action="UpdatePhong" asp-controller="Phong" asp-route-id="@item.Id" method="get">
                                        <input type="submit" class="btn btn-success" value="Sửa" />
                                    </form>
                                    <form asp-action="DeletePhong" asp-controller="Phong" asp-route-id="@item.Id" method="get">
                                        <input type="submit" class="btn btn-danger" value="Xóa" />
                                    </form>

                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>
<footer class="py-4 bg-light mt-auto">
    <div class="container-fluid">
        <div class="d-flex align-items-center justify-content-between small">
            <div class="text-muted">Copyright &copy; Your Website 2020</div>
            <div>
                <a href="#">Privacy Policy</a>
                &middot;
                <a href="#">Terms &amp; Conditions</a>
            </div>
        </div>
    </div>
</footer>

