@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model Project_DATN.Services.Models.PhongRequest
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card shadow-lg border-0 rounded-lg mt-5">
    <div class="card-header"><h3 class="text-center font-weight-light my-4">Cơ sở</h3></div>
    <div class="card-body">
        <form asp-action="CreatePhong" asp-controller="Phong" method="post">
            <div class="form-group">
                <label class="small mb-1" for="inputEmailAddress">Tên phòng</label>
                <input asp-for="tenPhong" class="form-control py-4" id="inputEmailAddress" type="text" />
                <span asp-validation-for="tenPhong" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="small mb-1" for="inputPassword">Ghi chú</label>
                <input asp-for="ghiChu" class="form-control" />
                <span asp-validation-for="ghiChu" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="small mb-1" for="inputPassword">Tầng</label>
                <select asp-for="ID_Lau" class="custom-select" asp-items="ViewBag.lsttang"></select>
                <span asp-validation-for="ID_Lau" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="small mb-1" for="inputPassword">Cơ sở</label>
                <select asp-for="ID_CoSo" class="custom-select" asp-items="ViewBag.lstCoso"></select>
                <span asp-validation-for="ID_CoSo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="small mb-1" for="inputPassword">Loại phòng</label>
                <select asp-for="ID_LoaiPhong" class="custom-select" asp-items="ViewBag.lstloaiphong"></select>
                <span asp-validation-for="ID_LoaiPhong" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="small mb-1" for="inputPassword">Trạng thái</label>
                <input asp-for="trangThai" class="form-control" />
                <span asp-validation-for="trangThai" class="text-danger"></span>
            </div>

            <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                <input class="btn btn-primary" type="submit" value="Tạo Mới" />
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

