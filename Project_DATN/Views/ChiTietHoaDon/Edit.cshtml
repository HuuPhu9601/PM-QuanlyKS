@model Project_DATN.Data.EF.Entities.ChiTiet_HoaDon

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Shared/_LayoutDashboard.cshtml";
}

<h1 class="text-center">Edit</h1>

<h4 class="text-center">Chi tiết hoá đơn</h4>
<hr />
<div class="border-1 row justify-content-center align-items-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="ID_DichVu" class="control-label">Dịch Vụ</label>
                <select asp-for="ID_DichVu" class="form-control" asp-items="ViewBag.DichVu"></select>
            </div>
            <div class="form-group">
                <label asp-for="soLuongDichVu" class="control-label">Số Lượng</label>
                <input asp-for="soLuongDichVu" class="form-control" />
                <span asp-validation-for="soLuongDichVu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ghiChu" class="control-label">Ghi Chú</label>
                <input asp-for="ghiChu" class="form-control" />
                <span asp-validation-for="ghiChu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="trangThai" class="control-label">Trạng Thái</label>
                <input asp-for="trangThai" class="form-control" />
                <span asp-validation-for="trangThai" class="text-danger"></span>
            </div>
            <div class="form-group justify-content-center align-items-center">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
