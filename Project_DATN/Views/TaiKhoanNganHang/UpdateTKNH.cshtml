@model Project_DATN.Services.Models.TaiKhoanNganHangRequest
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Update";
    Layout = "~/Shared/_Layout.cshtml";
}

<div class="card shadow-lg border-0 rounded-lg mt-5">
    <div class="card-header"><h3 class="text-center font-weight-light my-4">Tài khoản ngân hàng</h3></div>
    <div class="card-body">
        <form asp-action="UpdateTKNH" asp-controller="TaiKhoanNganHang" method="post">
            <div class="form-group">
                <label class="small mb-1" for="inputEmailAddress">Tên chủ tài khoản</label>
                <input asp-for="hoTenChuTKNH" class="form-control py-4" id="inputEmailAddress" type="text" />
                <span asp-validation-for="hoTenChuTKNH" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="small mb-1" for="inputPassword">Số tài khoản</label>
                <input asp-for="soTaiKhoan" class="form-control py-4" id="inputPassword" type="text" />
                <span asp-validation-for="soTaiKhoan" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="small mb-1" for="inputPassword">Tên ngân hàng</label>
                <input asp-for="tenNganHang" class="form-control py-4" id="inputPassword" type="text" />
                <span asp-validation-for="tenNganHang" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="small mb-1" for="inputPassword">Giá gốc</label>
                <input asp-for="tenChiNhanh" class="form-control py-4" id="inputPassword" type="text" />
                <span asp-validation-for="tenChiNhanh" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="small mb-1" for="inputPassword">Địa chỉ ngân hàng</label>
                <input asp-for="diaChiCN" class="form-control py-4" id="inputPassword" type="text" />
                <span asp-validation-for="diaChiCN" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="small mb-1" for="inputPassword">Ghi chú</label>
                <input asp-for="ghiChu" class="form-control py-4" id="inputPassword" type="text" />
                <span asp-validation-for="ghiChu" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="small mb-1" for="inputPassword">Trạng thái</label>
                <input asp-for="trangThai" class="form-control" type="text" />
                <span asp-validation-for="trangThai" class="text-danger"></span>
            </div>

            <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                <input class="btn btn-primary" type="submit" value="Tạo Mới" />
            </div>
            <div>
                <a asp-action="Index">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>


